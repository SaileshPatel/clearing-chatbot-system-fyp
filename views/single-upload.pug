extends templates/layout.pug

block content
    div.row
        div.col-xl-12
            p Enter the details for the course you wish to add to the clearing chatbot database.
    div.row
        div.col-xl-12
            form(action="/upload-one-record", method="post")
                div.form-group
                    label(for="ucas_code") UCAS Code:
                    input#ucas-code.form-control(type='text', name='ucas_code' pattern='[A-Z][0-9][0-9][0-9]' required)
                div.form-group
                    label(for="course_name") Course Name:
                    input#course-name.form-control(type="text", name="course_name" required)
                div.form-group
                    label(for="description") Description:
                    textarea#description.form-control(name="course_description" rows="4" cols="50" required)
                div.form-group
                    label(for="course_spaces") Number of Spaces
                    input#course-space.form-control(type="number" name="course_spaces" required)
                div.form-group
                    label(for="entry_requirements") Entry Requirements:
                    textarea#entry-requirements.form-control(name="entry_requirements" rows="4" cols="50" required)
                div.form-group
                    label(for="tuition_fees") Tuition Fees:
                    textarea#tuition-fees.form-control(name="tuition_fees" rows="4" cols="50" required)
                div.form-group
                    label(for="contact_details") Contact Details:
                    textarea#contact-details.form-control(name="contact_details" rows="4" cols="50" required)
                div.form-group
                    label(for="website") Website:
                    input#website.form-control(type="text", name="course_website" required)
                button.btn.btn-primary(type="submit") Upload Course